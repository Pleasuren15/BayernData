@model Staff

<div class="player-dis">
    <div class="player-dis-num-eu">
        <h3 class="player-dis-num" >@Model.StaffKitNumber</h3>
        @if (User.Identity.IsAuthenticated)
        {
            <h3>
                <a asp-controller="Admin" asp-action="Edit" asp-route-id="@Model.StaffId"><i class="fas fa-user-edit"></i></a>
                <a asp-controller="Admin" asp-action="Delete" asp-route-id="@Model.StaffId" onclick="return confirm('Are you sure you want to delete @Model.StaffFirstName @Model.StaffLastName on your records?')"><i class="fas fa-user-minus"></i></a>
            </h3>
        }
    </div>
    <div class="player-dis-img">
        <img src="@Model.StaffImageUrl" />
    </div>
    <div class="player-dis-typog">
        <h4 class="text-capitalize">@Model.StaffFirstName</h4>
        <h4 class="text-capitalize">@Model.StaffLastName</h4>
    </div>
</div>