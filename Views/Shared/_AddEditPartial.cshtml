@model Staff

<div class="my-row">
    <label class=" col-form-label fw-bold" asp-for="@Model.StaffFirstName"></label>
    <input class=" form-control" asp-for="@Model.StaffFirstName" placeholder="e.g Robert" />
</div>
<div class="my-row">
    <label class=" col-form-label fw-bold" asp-for="@Model.StaffLastName"></label>
    <input class=" form-control" asp-for="@Model.StaffLastName" placeholder="e.g Lewandowski" />
</div>
<div class="my-row">
    <label class=" col-form-label fw-bold" asp-for="@Model.StaffKitNumber"></label>
    <input class=" form-control" asp-for="@Model.StaffKitNumber" />
</div>
<div class="my-row">
    <label class=" col-form-label fw-bold" asp-for="@Model.StaffImageUrl"></label>
    <input class=" form-control" asp-for="@Model.StaffImageUrl" placeholder="e.g data:image/jpeg..." />
</div>
<div class="my-row">
    <label class=" col-form-label fw-bold" asp-for="@Model.StaffPosition"></label>
    <select class="form-select" asp-for="@Model.StaffPosition">
        <option value="Goalkeeper">Goalkeeper</option>
        <option value="Defender">Defender</option>
        <option value="Midfielder">Midfielder</option>
        <option value="Foward">Foward</option>
        <option value="Coach">Coach</option>
        <option value="Board">Board</option>
    </select>
</div>