@model LoginModel

@{
    ViewData["Title"] = "Login";
}

<div class="login-bg">
    <div class="container">
        <div class="login-container">
            <h3>Login</h3>
            <p class="lead">Login with your email &amp; password</p>
            <form asp-controller="Admin" asp-action="Login">
                <div asp-validation-summary="All" class="text-danger fw-bold"></div>
                <div>
                    <label asp-for="@Model.Email">Email:</label>
                    <input asp-for="@Model.Email" class="form-control" type="text" placeholder="Sbu@BayernData.com"  value="Sbu@BayernData.com"/>
                </div>
                <div class="mt-2">
                    <label asp-for="@Model.Password">Password:</label>
                    <input asp-for="@Model.Password" class="form-control" type="password" placeholder="••••••••" value="Secret123#" />
                </div>
                <div class="mt-2">
                    <button class="btn btn-info btn-sm" type="submit">Submit</button>
                    <a class="btn btn-danger btn-sm" role="button" asp-controller="Home" asp-action="Index">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>